<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alcohol_view"
    android:isScrollContainer="true"
    android:weightSum="1">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alcohol_name"
        android:textAlignment="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="25dip"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_weight="0.10"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textAlignment="center"
        app:srcCompat="@drawable/bottle" />

    <TextView
        android:id="@+id/alcohol_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="20dip"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/alcohol_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="20dip"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/alcohol_literprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="20dip"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/alcohol_farge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20dip"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/alcohol_lukt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alcohol_smak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="20dip"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/alcohol_prosent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="20dip"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/alcohol_passertil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="20dip"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/alcohol_land"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:textSize="20dip"
        android:textStyle="bold"/>

</LinearLayout></ScrollView>